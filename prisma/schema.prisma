generator client {
  provider = "prisma-client"
}

datasource db {
  provider = "sqlite"
}

enum TaskStatus {
  PENDING
  RUNNING
  COMPLETED
  FAILED
}

enum TaskType {
  REQUEST
}

model Task {
  id           String      @id @default(uuid())
  type         TaskType
  data         String
  status       TaskStatus  @default(PENDING)
  cron         String?     
  date         DateTime?
  retries      Int         @default(0)
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt

  @@index([type])
  @@index([status])
  @@index([createdAt])
  @@index([retries])
  @@index([date])
}
